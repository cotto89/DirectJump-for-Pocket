{
  "name": "DirectJump for Pocket",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Direct jump to original page in Pocket",
  "homepage_url": "https://github.com/cotto89/DirectJump-for-Pocket",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "https://getpocket.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://getpocket.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}